{% extends 'base.html.twig' %}

{% block body %}
    <div style="margin-bottom: 40px;">
    <h1>Редактирование товара</h1>


    {{ form_start(edit_form) }}
    <div class="form-group">
    {{ form_label(edit_form.title, 'Название') }}
        <div class="col-sm-10">
            {{ form_widget(edit_form.title)}}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(edit_form.category, 'Категория') }}
        <div class="col-sm-10">
            {{ form_widget(edit_form.category)}}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(edit_form.description, 'Описание') }}
        <div class="col-sm-10">
            {{ form_widget(edit_form.description)}}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(edit_form.price, 'Цена') }}
        <div class="col-sm-10">
            {{ form_widget(edit_form.price)}}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(edit_form.currency, 'Валюта') }}
        <div class="col-sm-10">
            {{ form_widget(edit_form.currency)}}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(edit_form.availability, 'Наличие') }}
        <div class="col-sm-10">
            {{ form_widget(edit_form.availability)}}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(edit_form.manufacturer, 'Продавец') }}
        <div class="col-sm-10">
            {{ form_widget(edit_form.manufacturer)}}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(edit_form.files, 'Изображения') }}
    {% for filess in product.files %}
        <div class="col-sm-3">
            <img  src="{{ asset('images/products/' ~ filess.file) }}" style=" width:200px;">
            {#{{ form_widget(edit_form.files)}}#}
        </div>
    {% endfor %}
    </div>

        <input class="btn btn-sm btn-primary" style="float: right;" type="submit" value="Обновить" />
    {{ form_end(edit_form) }}

    <a href="{{ path('products_index') }}" class="btn btn-sm btn-default">Вернуться к списку товаров</a>


    <div style="display: inline-block;">
        {{ form_start(delete_form) }}
        <input type="submit" class="btn btn-sm btn-danger" value="Удалить">
        {{ form_end(delete_form) }}
    </div>
    </div>
{% endblock %}
