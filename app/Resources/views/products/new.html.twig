{% extends 'base.html.twig' %}

{% block body %}

    <h1>Добавить новый товар</h1>

    {{ form_start(form) }}

    <div class="form-group">
        {{ form_label(form.title, 'Название') }}
        <div class="col-sm-10">
            {{ form_widget(form.title)}}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.category, 'Категория') }}
        <div class="col-sm-10">
            {{ form_widget(form.category)}}
        </div>
    </div>
    <div class="form-group">
    {{ form_label(form.description, 'Описание') }}
    <div class="col-sm-10">
        {{ form_widget(form.description)}}
    </div>
    </div>
    <div class="form-group">
        {{ form_label(form.price, 'Цена') }}
        <div class="col-sm-10">
            {{ form_widget(form.price)}}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.currency, 'Валюта') }}
        <div class="col-sm-10">
            {{ form_widget(form.currency)}}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.availability, 'Наличие') }}
        <div class="col-sm-10">
            {{ form_widget(form.availability)}}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.manufacturer, 'Продавец') }}
        <div class="col-sm-10">
            {{ form_widget(form.manufacturer)}}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.files, 'Изображение') }}
        <div class="col-sm-10">
            <ul class="files" data-prototype="{{ form_widget(form.files.vars.prototype)|e('html_attr') }}">
                {% for element in form.files %}
                    <li>
                        {{ form_widget(element.file) }}
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <input type="submit" class="btn btn-sm btn-primary" style="float: right;" value="Создать" />
    {{ form_end(form) }}

    <a href="{{ path('products_index') }}" class="btn btn-sm btn-default">Вернуться к списку</a>


{% endblock %}
