{% extends 'base.html.twig' %}

{% block body %}
    <h1>Manufacturer edit</h1>

    {{ form_start(edit_form) }}
    <div class="form-group">
        {{ form_label(edit_form.name, 'Name') }}
        <div class="col-sm-10">
            {{ form_widget(edit_form.name)}}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(edit_form.description, 'Description') }}
        <div class="col-sm-10">
            {{ form_widget(edit_form.description)}}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(edit_form.logo, 'Logotype') }}
        <div class="col-sm-10">
            <img  src="{{ asset('images/logo/' ~ images) }}" style=" width:200px;">
            {{ form_widget(edit_form.logo)}}
        </div>
    </div>
    <input type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('manufacturers_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
